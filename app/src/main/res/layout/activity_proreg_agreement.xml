<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".proreg_agreement"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="12dp"
        android:text="Professional accounts must be approved."
        android:textColor="@color/maintext"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="60dp"
        android:gravity="center_horizontal"
        android:text="@string/approvalinfo"
        app:layout_constraintBottom_toTopOf="@+id/btnAgreeToApproval"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/btnAgreeToApproval"
        android:layout_width="195dp"
        android:layout_height="0dp"
        android:layout_marginBottom="11dp"
        android:background="@drawable/rounded_button"
        android:text="AGREE"
        android:textColor="@color/maintext"
        app:layout_constraintBottom_toTopOf="@+id/btnBack8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/btnBack8"
        android:layout_width="195dp"
        android:layout_height="0dp"
        android:layout_marginBottom="169dp"
        android:background="@drawable/rounded_button"
        android:text="BACK"
        android:textColor="@color/maintext"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAgreeToApproval" />

</android.support.constraint.ConstraintLayout>